<center>

<% if Current.user %>

<h1>Main Page logged</h1>

    Logged as: <%= Current.user.email %>

    <%= button_to "Logout", logout_path, method: :delete %>

    <%=link_to Current.user.email, edit_password_path %>


<% else %>

    <h1>Main Page not logged</h1>

    <%=button_to "sign in", sign_in_path,method: :get %>

<% end %>


</center>
