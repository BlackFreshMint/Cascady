<%= form_with model: cliente do |form| %>
    <% cliente.errors.full_messages.each do |error| %>
        <div><%= error %></div>
    <% end %>
    <br>

    <div>
        <%= form.label :nombre %>
        <%= form.text_field :nombre %>
    </div>

    <div>
        <%= form.label :correo %>
        <%= form.email_field :correo %>
    </div>

    <div>
        <%= form.label :contraseña %>
        <%= form.password_field :contraseña %>
    </div>

    <div>
        <%= form.label :telefono %>
        <%= form.text_field :telefono %>
    </div>

    <div>
        <%= form.label :direccion %>
        <%= form.text_field :direccion %>
    </div>

    <div>
        <%= form.submit %>
    </div>
<% end %>
<hr>